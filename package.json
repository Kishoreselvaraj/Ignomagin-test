{
  "name": "ignomagin",
  "version": "0.1.0",
  "author": "Ignomagin",
  "main": "src/app/electron/main.js",
  "description": "Ignomagin is a web application that allows users to create and manage their own image gallery.",  
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "electron": "electron src/app/electron/main.js",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\"",
    "start": "next start",
    "lint": "next lint",
    "dist": "next build && electron-builder"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.4.1",
    "concurrently": "^9.1.2",
    "csv-parser": "^3.2.0",
    "express": "^4.21.2",
    "framer-motion": "^12.5.0",
    "lucide-react": "^0.482.0",
    "multer": "^1.4.5-lts.1",
    "next": "^15.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.8",
    "react-icons": "^5.5.0",
    "uuid": "^11.1.0",
    "wait-on": "^8.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "postcss": "^8",
    "prisma": "^6.4.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.yourapp.id",
    "productName": "MyNextApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/",
      "src/app/electron/main.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/logo_ignomagine.png"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
